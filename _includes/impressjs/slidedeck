		{% assign xPos = 0 %}
		{% for ch in page.chapters %}
			{% assign yPos = 0 %}
			{% for section in site.tags[ch] reversed %}
				<div class="step slide" data-x="{{ xPos }}" data-y="{{ yPos }}">
					<h1>{{ section.title }}</h1>
					{{ section.content }}
				</div>

				{% capture yPos %}
					{{ yPos | plus: 1500 }}
				{% endcapture %}
			{% endfor %}

			{% capture xPos %}
				{{ xPos | plus: 2000 }}
			{% endcapture %}
		{% endfor %}
</div>